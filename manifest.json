{
    "manifest_version": 3,
    "name": "20-20-20 Eye Break Reminder",
    "version": "1.1",
    "description": "Reminds you to look away every 20 minutes for 20 seconds at 20 meters distance.",
    "permissions": [
      "alarms",
      "notifications",
      "storage"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
      }
    },
    "icons": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  }
  